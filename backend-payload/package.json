    "@payloadcms/richtext-lexical": "^3.70.0",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "next": "^15.4.10",
    "node-cron": "^4.2.1",
    "payload": "^3.70.0",
    "puppeteer": "^24.34.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vitest/coverage-v8": "^4.0.16",
    "sass": "^1.89.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
