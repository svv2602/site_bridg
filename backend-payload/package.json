{
  "name": "backend-payload",
  "version": "1.0.0",
  "description": "Bridgestone Ukraine CMS + Content Automation",
  "type": "module",
  "scripts": {
    "dev": "next dev --port 3001",
    "build": "next build",
    "start": "next start --port 3001",
    "seed": "tsx scripts/seed.ts",
    "generate:types": "payload generate:types",
    "automation": "tsx content-automation/src/scheduler.ts",
    "automation:scrape": "tsx content-automation/src/scheduler.ts scrape",
    "automation:generate": "tsx content-automation/src/scheduler.ts generate",
    "automation:publish": "tsx content-automation/src/scheduler.ts publish",
    "automation:full": "tsx content-automation/src/scheduler.ts run-full",
    "automation:daemon": "tsx content-automation/src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
