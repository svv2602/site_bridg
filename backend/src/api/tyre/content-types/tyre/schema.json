{
  "kind": "collectionType",
  "collectionName": "tyres",
  "info": {
    "singularName": "tyre",
    "pluralName": "tyres",
    "displayName": "Tyre",
    "description": "Tyre model with sizes, season, and specifications"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "season": {
      "type": "enumeration",
      "enum": ["summer", "winter", "allseason"],
      "required": true
    },
    "vehicleTypes": {
      "type": "json",
      "required": true
    },
    "isNew": {
      "type": "boolean",
      "default": false
    },
    "isPopular": {
      "type": "boolean",
      "default": false
    },
    "shortDescription": {
      "type": "text"
    },
    "fullDescription": {
      "type": "richtext"
    },
    "euLabel": {
      "type": "component",
      "repeatable": false,
      "component": "tyre.eu-label"
    },
    "sizes": {
      "type": "component",
      "repeatable": true,
      "component": "tyre.size"
    },
    "usage": {
      "type": "component",
      "repeatable": false,
      "component": "tyre.usage"
    },
    "technologies": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::technology.technology",
      "inversedBy": "tyres"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "badges": {
      "type": "component",
      "repeatable": true,
      "component": "award.badge"
    },
    "keyBenefits": {
      "type": "json"
    },
    "seoTitle": {
      "type": "string",
      "maxLength": 70
    },
    "seoDescription": {
      "type": "text",
      "maxLength": 170
    }
  }
}
